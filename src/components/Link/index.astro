---
export interface Props {
  href: string;
  class?: string;
  current?: boolean;
}

const { href, current } = Astro.props;
---

<a
  href={href}
  class:list={[
    {
      "text-white hover:text-white hover:text-none 	 ": current,
      "text-neutral-100/65 hover:opacity-65 ": !current,
    },
    "transition duration-150 ease-in-out",
  ]}
>
  <slot />
</a>
