---
import type { CollectionEntry } from "astro:content";

// Components
import FormattedDate from "../components/FormattedDate.astro";
import Navbar from "../components/Navbar/index.astro";
import Footer from "../components/Footer/index.astro";
import { Icon } from "astro-icon/components";

type Props = CollectionEntry<"blog">["data"];

const {
  title,
  pubDate,
  updatedDate,
  heroImage,
  publisherImage = "/Images/AvatarBlog.png",
  publisherName,
  publisherBio,
} = Astro.props;

const article = [
  { path: "/Images/blog2.png" },
  { title: "The Ultimate Guide to Becoming a Great Designer" },
  { genre: "The Ultimate Guide to Becoming a Great Designer" },
];
---

<html lang="en">
  <body>
    <Navbar />
    <main
      class="py-6 flex flex-col justify-center items-center gap-y-10 px-20 bg-black text-white"
    >
      <div class="flex flex-col items-center justify-center">
        <h1 class="text-[120px] font-semibold font-inter">{title}</h1>
        <div class="text-xl font-inter font-semibold text-zinc-400">
          <FormattedDate date={pubDate} />
          {
            updatedDate && (
              <div class="last-updated-on">
                Last updated on <FormattedDate date={updatedDate} />
              </div>
            )
          }
        </div>
      </div>

      {
        heroImage && (
          <img
            class="h-96 overflow-hidden object-cover my-10 shadow-md shadow-zinc-600/70 "
            width={1020}
            height={510}
            src={heroImage}
            alt=""
          />
        )
      }

      <article
        class="flex flex-col items-center justify-center gap-y-10 text-zinc-50 font-medium font-inter text-xl px-96"
      >
        <slot />
      </article>
      <div class="w-full px-96 flex items-center justify-start gap-3">
        <img
          class="h-16 w-16 rounded-full overflow-hidden object-cover my-10"
          width={1020}
          height={510}
          src={publisherImage}
          alt=""
        />
        <div class="flex flex-col items-start justify-center">
          <div class="text-zinc-50 font-semibold text-2xl">{publisherName}</div>
          <div class="font-semibold text-lg text-zinc-500">{publisherBio}</div>
        </div>
      </div>
      <div class="px-20 w-full flex items-center justify-between">
        <div class="font-semibold font-inter text-3xl">Latest articles</div>
        <div class="flex items-center justify-center gap-3 group">
          <span
            class="text-zinc-400 font-inter cursor-pointer font-medium text-2xl group-hover:underline"
            >View all articles</span
          >
          <Icon name="right" class="h-6 w-8" />
        </div>
      </div>
      <div class="h-[1.5px] w-full bg-zinc-500 mx-20"></div>
    </main>
    <div class="w-full px-24">
      {
        article.map((index) => (
          <div>
            <div />
            <>
              <div />
              <div />
            </>
          </div>
        ))
      }
    </div>

    <Footer />
  </body>
</html>
