<script
  is:inline
  src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-element-bundle.min.js"
></script>

<script is:inline>
  const swiperEl = document.querySelector("swiper-container");

  Object.assign(swiperEl, {
    breakpoints: {
      640: {
        slidesPerView: 1.5,
      },
      1024: {
        slidesPerView: 2.5,
      },
    },
  });

  swiperEl.initialize();
</script>
