---
import Button from "../../components/Button/index.astro" ;

---
<div
  class="flex flex-col items-center justify-center gap-y-16 bg-black container-max-width pb-32 "
>
  <div
    class="text-6xl sm:text-9xl font-anton text-white font-medium px-3 sm:px-16 leading-snug xl:leading-none"
  >
    WE CRAFT <span class="text-white/50"> WEBSITES, APPS, DASHBOARD.</span>
  </div>
  <div class="w-full px-3 sm:px-24">
    <Button>View pricing</Button>
  </div>

  <div
    class="flex flex-col sm:flex-row sm:flex-wrap items-center justify-center gap-20 w-full py-12 sm:py-16 bg-zinc-900 px-3 sm:px-16"
  >
    <div class="flex flex-col gap-y-2 items-center justify-start sm:h-32">
      <div class="font-anton font-semibold text-4xl text-white">5</div>
      <div class="font-inter text-lg sm:text-xl text-zinc-500 w-44 text-center">
        Years leading transformations
      </div>
    </div>
    <div class="flex flex-col gap-y-2 items-center justify-start sm:h-32">
      <div class="font-anton font-semibold text-4xl text-white">75</div>
      <div class="font-inter text-lg sm:text-xl text-zinc-500 w-44 text-center">
        Successful clients
      </div>
    </div>
    <div class="flex flex-col gap-y-2 items-center justify-start sm:h-32">
      <div class="font-anton font-semibold text-4xl text-white">02</div>
      <div class="font-inter text-lg sm:text-xl text-zinc-500 w-44 text-center">
        03 Unicorns leading the market
      </div>
    </div>
    <div class="flex flex-col gap-y-2 items-center justify-start sm:h-32">
      <div class="font-anton font-semibold text-4xl text-white">23</div>
      <div class="font-inter text-lg sm:text-xl text-zinc-500 w-44 text-center">
        Multicultural team players
      </div>
    </div>
  </div>
</div>
